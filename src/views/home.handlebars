<div class="products-container">
  <h1>Lista de Productos</h1>

  <div class="products-grid">
    {{#each products}}
    <a href="/products/{{this.id}}" class="product-card-link">
      <div class="product-card">
        <img src={{this.thumbnail}} alt={{this.title}} class="product-img">

        <div class="product-info">
          <h2 class="product-title">{{this.title}}</h2>
          <p class="product-desc">{{this.description}}</p>
          <p class="product-category"><strong>Categor√≠a:</strong> {{this.category}}</p>
          <p class="product-price">${{this.price}}</p>
          <p class="product-stock">Stock: {{this.stock}}</p>
        </div>
      </div>
    </a>
    {{/each}}
  </div>

    <div class="pagination-container">
      <div class="pagination">
        {{#each links}}
          <a href="{{this.link}}" class="page-link">
            {{this.page}}
          </a>
        {{/each}}
      </div>
    </div>
</div>